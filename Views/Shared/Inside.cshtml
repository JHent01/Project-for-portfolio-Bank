<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }
        
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f5f5f5;
        }
        
        .main-content {
            flex: 1;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px 0 0 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
           
        }

        .welcome-section {
            margin-bottom: 40px;
        }

        .welcome-title {
            color: #2c3e50;
            font-size: 32px;
            margin-bottom: 20px;
        }

        .welcome-text {
            font-size: 18px;
            line-height: 1.6;
            color: #333;
        }

        .contact-section, .news-section {
            margin-bottom: 30px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
        }

        .section-title {
            color: #2c3e50;
            font-size: 24px;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #3498db;
        }

        .contact-item {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .contact-icon {
            margin-right: 10px;
            color: #3498db;
            font-size: 20px;
        }

        .news-item {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .news-date {
            font-size: 14px;
            color: #7f8c8d;
            margin-bottom: 5px;
        }

        .news-title {
            font-weight: bold;
            margin-bottom: 5px;
            color: #2c3e50;
        }
        
        .sidebar {
            width: 320px;
            background-color: #2c3e50;
            color: white;
            padding: 25px;
            border-radius: 0 10px 10px 0;
        }
        
        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #3498db;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-weight: bold;
            font-size: 20px;
        }
        
        .user-name {
            font-size: 18px;
            font-weight: bold;
        }
        
        .user-email {
            font-size: 14px;
            opacity: 0.8;
            margin-top: 3px;
        }
        
        .nav-menu {
            list-style: none;
        }
        
        .nav-item {
            margin-bottom: 15px;
        }
        
        .nav-link {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border-radius: 5px;
            transition: all 0.3s;
        }
        
        .nav-link:hover, .nav-link.active {
            background-color: #3498db;
        }
        
        .nav-icon {
            margin-right: 10px;
            font-size: 20px;
        }
        
        .balance-card {
            background: linear-gradient(135deg, #3498db, #2c3e50);
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .balance-title {
            font-size: 14px;
            opacity: 0.8;
            margin-bottom: 5px;
        }
        
        .balance-amount {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
        }
        
        .card-number {
            font-family: 'Courier New', monospace;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }
        
        .card-expiry {
            font-size: 14px;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <main class="main-content">
        @RenderBody()
    </main>
    
    <aside class="sidebar">
        <div class="user-info">
            <div class="user-avatar">👤</div>
            <div class="nav-link active">
            @ViewBag.userInfo
            </div>
           
        </div>
        
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="#" class="nav-link active">
                    <span class="nav-icon">👤</span>
                    <span>Інформація о користувачі</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="Transfer" class="nav-link">
                    <span class="nav-icon">↗️</span>
                    <span>Переказ коштів</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="TransactionHistory" class="nav-link">
                    <span class="nav-icon">📋</span>
                    <span>Історія транзакцій</span>
                </a>
            </li>
        </ul>
        <div class="balance-card">
            <div class="balance-amount">@ViewBag.Balance $ </div>
            <div class="card-number"> @ViewBag.NumberAccount </div>
            <div class="card-expiry">Термін: @ViewBag.CardExpiration  </div>
            </div>  
       
    </aside>
</body>
</html>